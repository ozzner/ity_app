<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
        <shape>
            <gradient
                    android:endColor="#57157D"
                    android:startColor="#90007E"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#6a3ab2" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                    android:color="#57157D" />
            <stroke
                    android:width="1dp"
                    android:color="#6a3ab2" />
        </shape>
        
    </item>
</selector>
