<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/pad_15dp"
    android:paddingLeft="@dimen/pad_15dp"
    android:paddingRight="@dimen/pad_5dp"
    android:paddingTop="@dimen/pad_15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/pad_8dp">

        <ImageView
            android:id="@+id/imgContacto"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_contact" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/pad_10dp">

            <TextView
                android:id="@+id/tvNombreContacto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="false"
                android:text="@string/lbl_celda_galeria"
                android:textColor="@color/Black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="(+51) 993297151"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgEsUsuario"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/alto_icono_contacto"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logo_ity" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_popup_menu"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/alto_icono_contacto"
                android:layout_gravity="right"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_menu_overflow" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lay_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_color_0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="10"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="2.5"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pad_2.5dp"
                    android:src="@drawable/ic_call_white"
                    android:tint="@color/pantone_240C" />

                <TextView
                    android:id="@+id/txt_count_phones"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="+3"
                    android:textColor="@color/gray_color_4" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
