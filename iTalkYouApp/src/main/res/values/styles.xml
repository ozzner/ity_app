    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="popupMenuStyle">@style/menu</item>
        <item name="dropDownListViewStyle">@style/dropDownListView</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle</item>
    </style>
    
    <style name="StyledIndicators" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="AppBaseTheme.BotonBorrar" parent="AppBaseTheme">
        <item name="android:textColor">@color/blanco</item>
        <!--<item name="android:background">@drawable/fondo_boton_gris</item>-->
    </style>

    <style name="AppBaseTheme.EtiquetaTitulo" parent="AppBaseTheme">
        <!--<item name="android:textColor">@color/Black</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppBaseTheme.EtiquetaSubTitulo" parent="AppBaseTheme">
        <item name="android:textColor">@color/pantone_306C</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppBaseTheme.EtiquetaTituloNormal" parent="AppBaseTheme">
        <item name="android:textColor">@color/Red</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppBaseTheme.TextoNormal" parent="AppBaseTheme">
        <item name="android:textColor">@color/Red</item>
        <item name="android:textSize">16sp</item>
    </style>

	<style name="styleBtnTexto">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>
    
	<style name="styleTextoCabeceraDialogo">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
	<style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
      <!--   <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item> --> 
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">20dp</item>
    </style>
    
	<style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="styleFondoDialogo">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Custom rsantillan styles-->
    <style name="custom_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/italkyou_primary_purple</item>
        <item name="android:textColorHint">@color/gray_color_2</item>
        <item name="android:layout_height">@dimen/alto_boton</item>
        <item name="android:textSize">@dimen/txt_sp16</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:background">@drawable/edittext_shape</item>
    </style>

    <style name="custom_edittext_conversation_style" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/pantone_240C</item>
        <item name="android:textColorHint">@color/tranparent</item>
        <item name="android:layout_height">@dimen/alto_boton</item>
        <item name="android:textSize">@dimen/txt_sp16</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:background">@drawable/edittext_shape_conversation</item>
    </style>


    <style name="custom_imagebutton_style" parent="@android:style/Widget.ImageButton">
        <item name="android:textColor">@color/pantone_240C</item>
        <item name="android:layout_height">@dimen/alto_boton</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:background">@drawable/imagebutton_shape</item>
    </style>


    <!-- popup menu theme. -->
    <style name="PopupMenu"  parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/pantone_240C</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">14sp</item>
    </style>



    <!-- default background -->
    <style name="menu" parent="android:Widget.ListPopupWindow">
        <item name="android:popupBackground">@color/pantone_306C</item>
    </style>

    <!-- selector for pressed/focused states -->
    <style name="dropDownListView" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/menu_selector</item>
    </style>

    <!-- font color -->
    <style name="itemTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@drawable/menu_item_selector</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>
