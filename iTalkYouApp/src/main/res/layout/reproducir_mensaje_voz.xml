<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_normal" >

    <LinearLayout
        android:id="@+id/lnlyCabeceraDialogo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_height_65dp"
        android:orientation="vertical" >

		<include
		    android:id="@+id/cabeceraDialogo"
		    layout="@layout/cabecera_dialogo" />

    </LinearLayout>
    
    <TextView
        android:id="@+id/tvDatosMensaje"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_contactos"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal|center_vertical" 
        android:paddingBottom="10dip"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="10dip"/>

    

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip" 
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip">
        <ImageButton
        android:id="@+id/btnAccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/seleccion_boton"
        android:src="@drawable/audio_stop" 
        android:layout_weight="1"
        />
        <ImageButton
        android:id="@+id/btnCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:background="@drawable/seleccion_boton"
        android:layout_weight="1" />
    </LinearLayout>

    

</LinearLayout>
