<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/list_selector"
    android:padding="@dimen/pad_15dp"
    android:gravity="center_horizontal"

    >

        <ImageView
            android:id="@+id/imgContacto"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_contact"
            />

        <TextView
            android:id="@+id/tvNombreContacto"
            android:paddingLeft="@dimen/pad_10dp"
            android:paddingTop="2dp"
            android:gravity="center_vertical|top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/lbl_celda_galeria"
            android:layout_margin="@dimen/margen_texto_contactos"
            android:singleLine="false"
            android:textSize="15sp"
            android:textColor="@color/Black"
            android:layout_weight="0.4"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:id="@+id/imgEsUsuario"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/alto_icono_contacto"
            android:layout_gravity="center"
            android:src="@drawable/ic_logo_ity"
            android:scaleType="centerCrop"
            android:layout_weight="0.5"
            android:contentDescription="@string/app_name"
        />

        <CheckedTextView
	     android:id="@+id/chkEliminarFavorito"
	     android:layout_width="@dimen/ancho_icono_contacto"
	     android:layout_height="@dimen/alto_icono_contacto"
	     android:checkMark="@drawable/seleccion_checkbox"
         android:gravity="center"
	     android:enabled="true"
         android:focusable="false"
         android:visibility="visible"/>

    </LinearLayout>
</LinearLayout>
