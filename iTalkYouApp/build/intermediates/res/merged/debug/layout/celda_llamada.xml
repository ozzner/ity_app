<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
	android:layout_marginTop="5dip"
	android:layout_marginBottom="5dip" >

    <ImageView
        android:id="@+id/imgTipoLlamada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"/>

    <LinearLayout
        android:id="@+id/lnlyDatosLlamada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="5dip"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tvNombreLlamada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_nombre"
            android:textColor="@color/Black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvNumeroLlamada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_telefono"
            android:textColor="@color/Black"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/tvFechaLlamada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_fecha_inicio"
            android:textColor="@color/Black"
            android:textSize="12sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip">
    <CheckedTextView
	     android:id="@+id/chkEliminar"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:checkMark="@drawable/seleccion_checkbox"
	     android:enabled="true"
	     android:layout_gravity="right"
         android:gravity="right" 
         android:layout_marginRight="15dip"
         android:visibility="gone"/>
	</LinearLayout>
</LinearLayout>
