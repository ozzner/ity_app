<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.italkyou.gui.Testing.TestingActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/et_height_65dp"
        android:layout_marginBottom="@dimen/pad_25dp"
        style="@style/custom_edittext_style">

        <TextView
            android:id="@+id/tv_device_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_sp18"
            android:textStyle="bold"
            android:text="LG MAGNA H48"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="@dimen/pad_1dp"
        android:layout_height="@dimen/et_height_25dp"
        android:gravity="center|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Llamadas:"
            android:gravity="center"
            android:textSize="@dimen/txt_sp14"
            android:textColor="@color/Black"
            android:id="@+id/tv_label_call" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_8dp"
            android:text="No compatible"
            android:gravity="center"
            android:textColor="@color/my_green"
            android:id="@+id/tv_label_call_answer" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_height_25dp"
        android:gravity="center|left"
        android:padding="@dimen/pad_1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version OS:"
            android:textSize="@dimen/txt_sp14"
            android:textColor="@color/Black"
            android:id="@+id/tv_label_version_os" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_8dp"
            android:text="Android SDK: 19 (4.4.4)"
            android:textColor="@color/my_green"
            android:id="@+id/tv_label_version_os_answer" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_height_25dp"
        android:gravity="center|left"
        android:padding="@dimen/pad_1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version APP:"
            android:textSize="@dimen/txt_sp14"
            android:textColor="@color/Black"
            android:id="@+id/tv_label_version_app" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_8dp"
            android:text="v1.9.1"
            android:textColor="@color/my_green"
            android:id="@+id/tv_label_version_app_answer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/bt_send_testing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height_55dp"
            android:layout_marginTop="@dimen/pad_25dp"
            android:text="@string/btn_enviar"
            android:textColor="@color/White"
            android:background="@drawable/button_update_selector"/>
    </LinearLayout>



</LinearLayout>
