<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:shape="rectangle" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/iTalkYou_Morado_Fuerte"></solid>
            <corners android:radius="0dp"></corners>
            <gradient android:angle="90"
                android:startColor="@color/italkyou_primary_blue"
                android:endColor="@color/pantone_306C"></gradient>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/italkyou_primary_blue"></solid>
            <corners android:radius="0dp"></corners>
            <stroke android:width="2dp" android:color="@color/italkyou_primary_blue" />
        </shape>
    </item>
</selector>

