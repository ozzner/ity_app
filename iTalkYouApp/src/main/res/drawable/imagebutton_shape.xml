<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:shape="rectangle" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/i_talk_you_trans_30"></solid>
            <corners android:radius="1dp"></corners>
            <stroke android:width="1dp" android:color="@color/iTalkYou_Morado_Fuerte" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="1dp"></corners>
            <stroke android:width="1dp" android:color="@color/italkyou_primary_purple" />
        </shape>
    </item>
</selector>