<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#0EA0DD" />
            <stroke
                    android:width="1dp"
                    android:color="#14aff0" />
            <corners
                    android:radius="49dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:endColor="#44c0f3"
                    android:startColor="#0EA0DD"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#14aff0" />
            <corners
                    android:radius="50dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>